{
  "name": "filevault",
  "version": "1.0.0",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --watch . --ext js,json --ignore node_modules",
    "dev:docs": "npm run swagger:generate && nodemon server.js --watch . --ext js,json --ignore node_modules --ignore docs/swagger-output.json",
    "dev:docker": "docker compose -f docker-compose.dev.yml up --build",
    "dev:docker:down": "docker compose -f docker-compose.dev.yml down -v",
    "build": "npm install",
    "migrate": "dbmate up",
    "postinstall": "echo 'Migrations will run on startup'",
    "db:migrate": "dbmate up",
    "swagger:generate": "node swagger-autogen.js",
    "swagger:watch": "node swagger-watch.js",
    "docs": "npm run swagger:generate && echo 'Swagger docs generated! Visit http://localhost:3000/api-docs'",
    "dev:auto-docs": "concurrently \"npm run swagger:watch\" \"npm run dev\" --names \"SWAGGER,SERVER\" --prefix-colors \"cyan,green\""
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.777.0",
    "@aws-sdk/lib-storage": "^3.758.0",
    "@aws-sdk/s3-request-presigner": "^3.758.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.43.1",
    "clamav.js": "^0.12.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dbmate": "^2.26.0",
    "dotenv": "^16.4.7",
    "dotenv-safe": "^9.1.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "gp": "^0.0.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^3.3.4",
    "nodemailer": "^6.10.0",
    "pg-monitor": "^2.1.0",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "pg": "^8.16.3",
    "pg-mem": "^3.0.5",
    "supertest": "^7.1.0",
    "swagger-autogen": "^2.23.7"
  }
}
