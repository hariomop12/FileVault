# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database (Use external PostgreSQL service)
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_DB=filevault_prod
POSTGRES_USER=filevault_user
POSTGRES_PASSWORD=your-secure-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-production-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Fallback AWS S3 Configuration (optional - leave blank to use R2 only)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app-domain.com

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_FILES_PER_USER=100

# Monitoring (optional)
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Health Check
HEALTH_CHECK_INTERVAL=30000