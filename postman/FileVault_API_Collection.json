    {
      "name": "üìÅ Anonymous File Operations",
      "item": [
        {
          "name": "Upload File (Anonymous)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.file && response.file.file_id) {",
                  "        pm.environment.set('anonymous_file_id', response.file.file_id);",
                  "        pm.environment.set('anonymous_secret_key', response.file.secret_key);",
                  "        console.log('File uploaded successfully:', response.file.file_id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "description": "Select a file to upload (max 5GB)"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/files/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "files", "upload"]
            },
            "description": "Upload a file without authentication. Returns file_id and secret_key for download."
          },
          "response": []
        },
        {
          "name": "Download File (Anonymous)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"file_id\": \"{{anonymous_file_id}}\",\n  \"secret_key\": \"{{anonymous_secret_key}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/files/download",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "files", "download"]
            },
            "description": "Download an anonymously uploaded file using file_id and secret_key"
          },
          "response": []
        }
      ]
    },
    {
      "name": "üîí Authenticated File Operations",
      "item": [
        {
          "name": "Upload File (Authenticated)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.file && response.file.id) {",
                  "        pm.environment.set('user_file_id', response.file.id);",
                  "        console.log('File uploaded successfully:', response.file.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{auth_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "description": "Select a file to upload"
                },
                {
                  "key": "is_public",
                  "value": "false",
                  "type": "text",
                  "description": "Make file publicly accessible (optional)"
                },
                {
                  "key": "folder_path",
                  "value": "/",
                  "type": "text",
                  "description": "Folder path for organization (optional)"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "upload"]
            },
            "description": "Upload a file to authenticated user's account with organization options"
          },
          "response": []
        },
